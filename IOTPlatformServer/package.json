    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/pino": "^5.20.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "nodemon": "^1.18.4",
    "pino-pretty": "^2.2.0",
    "shelljs": "^0.8.2",
    "supertest": "^3.3.0",
